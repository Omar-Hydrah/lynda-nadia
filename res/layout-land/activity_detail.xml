<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingBottom="16dp"
	android:paddingTop="16dp"
	android:paddingRight="16dp"
	android:paddingLeft="16dp"
	tools:context="com.nadia.DetailActivity"
	>

	<ScrollView 
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		>

		<RelativeLayout 
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			>

			<TextView 
				android:id="@+id/foodName"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentStart="true"
				android:layout_alignParentLeft="true"
				android:layout_alignParentTop="true"
				android:text="Food text"
				android:textSize="24sp"
				/>	
				<!-- 
				android:layout_toStartOf="@+id/foodPrice"
				android:layout_toLeftOf="@+id/foodPrice"
				android:layout_alignParentLeft="true"
				 -->

			<TextView 
				android:id="@+id/foodPrice"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:layout_alignParentTop="true"
				android:layout_alignParentEnd="true"
				android:paddingLeft="10dp"
				android:text="$9"
				android:textSize="24sp"
				/>	

<!-- 				
				android:layout_toRightOf="@+id/foodName"
				android:layout_toEndOf="@+id/foodName"
				android:layout_alignBottom="@+id/foodName"

	 -->
			<ImageView 
				android:id="@+id/foodImage"
				android:layout_width="300dp"
				android:layout_height="300dp"
				android:layout_alignParentStart="true"
				android:layout_alignParentLeft="true"
				android:layout_alignParentBottom="true"
				android:layout_below="@+id/foodName"
				android:layout_marginTop="16dp"
				android:scaleType="fitCenter"
				android:contentDescription="Food Image"
				android:src="@drawable/apple_pie"
				/>
				<!-- 
				android:layout_below="@+id/foodName"
				android:layout_toLeftOf="@+id/foodDescription"
				android:layout_toStartOf="@+id/foodDescription"
				 -->

			<TextView 
				android:id="@+id/foodDescription"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Longer description"
				android:layout_toRightOf="@+id/foodImage"
				android:layout_toEndOf="@+id/foodImage"
				android:layout_alignParentRight="true"
				android:layout_alignParentEnd="true"
				android:layout_alignTop="@+id/foodImage"
				android:paddingLeft="20dp"
				/>	
<!-- 				android:layout_alignParentBottom="true"
				 -->


		</RelativeLayout>

	</ScrollView>
</RelativeLayout>

